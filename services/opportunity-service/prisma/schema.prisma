generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}



datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") 
}

model Opportunity {
  opportunity_id Int       @id @default(autoincrement())
  title          String    @db.VarChar(255)
  description    String?   @db.Text
  deadline       DateTime?
  category       String?   @db.VarChar(100)
  professor_id   String    @db.VarChar(255)   // ← BẮT BUỘC KHÔNG ĐƯỢC NULL
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  @@map("opportunities")
}


model MatchingResult {
  matching_id    Int       @id @default(autoincrement())
  application_id Int
  matched_date   DateTime? @default(now())
  score          Decimal?  @db.Decimal(5, 2)
  eligibility    String?   @db.Text

  @@map("matchingresult")
}
